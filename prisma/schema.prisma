generator client {
  provider = "prisma-client-js"
 output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(STUDENT)
  bookings  Booking[]
  createdAt DateTime  @default(now())
}

model Booking {
    id          Int       @id @default(autoincrement())
  student     User      @relation(fields: [studentId], references: [id])
  studentId   Int
  date        DateTime
  durationHrs Int       // e.g. 1 or 2 hours
  status      Status    @default(PENDING)
  createdAt   DateTime  @default(now())
}

enum Role {
  STUDENT
  ADMIN
}

enum Status {
  PENDING
  COMPLETED
  CANCELLED
}